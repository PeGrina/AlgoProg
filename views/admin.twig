{% extends 'layout.twig' %}

{% block body %}
    <h1>Админ панель</h1>
    <!-- Welcome text -->
    <section>
        <h2>Текущие статьи</h2>
        <ol>
            {% for article in articles %}
                <li>
                    <span>{{ article.name }}</span>
                    <a href="/article/edit/{{ article.id }}">Редактировать</a>
                    <a href="/article/{{ article.id }}">Посмотреть</a>
                </li>
            {% endfor %}
        </ol>
        <a href="/article/create">Создать новую статью</a><br>
        <a href="/upload">Выложить файл</a>
    </section>
{% endblock %}